{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@inkline/inkline",
      "@nuxt/types",
      "@types/node",
      "@types/aos",
      "nuxt-webpack-optimisations",
      "oh-vue-icons"
    ]
  },
  "include": [
    "./src/{**/*,*}.{js,ts,vue}",
    "nuxt.config.ts"
  ],
  "exclude": [
    "src/assets/images",
    "node_modules",
    ".nuxt",
    "public",
    ".husky",
    "dist",
    ".nuxt",
    ".github",
    ".yarn",
    "tests"
  ]
}
